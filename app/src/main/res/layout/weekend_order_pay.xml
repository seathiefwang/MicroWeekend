<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eae9e9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/order_pay_head"
        android:background="@color/headcolor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_pay_back"
            android:textColor="@color/whitecolor"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="填写订单"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/whitecolor"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/order_pay_title"
        android:layout_below="@+id/order_pay_head"
        android:background="@color/whitecolor">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/skin_loading_icon"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_toRightOf="@+id/imageView"
            android:layout_centerVertical="true"
            android:textColor="@color/blackcolor"
            android:padding="10dp"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_pay_title"
        android:id="@+id/order_pay_way">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line_01"
            android:background="@drawable/graph_line"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单"
            android:id="@+id/textView2"
            android:layout_below="@+id/line_01"
            android:background="@color/whitecolor"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line_02"
            android:layout_below="@+id/textView2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价格："
            android:id="@+id/textView3"
            android:layout_below="@+id/line_02"
            android:background="@color/whitecolor"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line_03"
            android:layout_below="@+id/textView3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数量："
            android:id="@+id/textView4"
            android:layout_below="@+id/line_03"
            android:background="@color/whitecolor"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_pay_way"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:id="@+id/textView5"
            android:background="@color/whitecolor"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line_04"
            android:layout_below="@+id/textView5"
            android:background="@drawable/graph_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="支付宝"
            android:id="@+id/order_payway_zhifubao"
            android:layout_below="@+id/line_04"
            android:background="@color/whitecolor"
            android:drawableLeft="@drawable/icon_pay_zhifubao"
            android:padding="10dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line_05"
            android:layout_below="@+id/order_payway_zhifubao"
            android:background="@drawable/graph_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="微信"
            android:id="@+id/order_payway_weixin"
            android:layout_below="@+id/line_05"
            android:drawableLeft="@drawable/icon_pay_weixin"
            android:background="@color/whitecolor"
            android:padding="10dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="合计：￥100"
            android:id="@+id/textView6"
            android:gravity="center"
            android:textColor="#ff4b4b"
            android:background="@color/whitecolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="确定"
            android:id="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView6"
            android:gravity="center"
            android:textColor="@color/whitecolor"
            android:background="#ff4b4b" />
    </RelativeLayout>
</RelativeLayout>