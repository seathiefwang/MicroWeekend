<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor">

    <RelativeLayout
        android:id="@+id/detail_layout_head"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/headcolor" >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="活动内容"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whitecolor"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/toolbar_refresh"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_share"
            android:padding="15dp" />

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:padding="15dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/weekend_detaillistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_layout_head"
        android:layout_above="@+id/detail_layout_join"></ListView>

    <RelativeLayout
        android:id="@+id/detail_layout_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="￥100"
            android:id="@+id/tv_charge"
            android:gravity="center"
            android:textColor="#ff4b4b"
            android:background="@color/whitecolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="立即参加"
            android:id="@+id/tv_join"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_charge"
            android:gravity="center"
            android:textColor="@color/whitecolor"
            android:background="#ff4b4b" />
    </RelativeLayout>
</RelativeLayout>