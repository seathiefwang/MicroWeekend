<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/whitecolor">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/new_regist_poppic_default" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            android:drawablePadding="3dp"
            android:gravity="bottom"
            android:text="微周末活动组织者"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/blackcolor"
            android:textStyle="normal"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/messages_card_arrow"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/weekend_img_01"
        android:visibility="visible"
        android:adjustViewBounds="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中秋节|最美黄瑶古镇·徒步看最美最全的梯田"
        android:textColor="@color/blackcolor"
        android:textSize="20dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:background="@color/whitecolor"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="活动时间：2016-10-01"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:background="@color/whitecolor"
        android:textColor="@color/blackcolor"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line_01"
        android:layout_below="@+id/textView4"
        android:background="@drawable/graph_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="活动地点：深圳市南山区西丽大学城"
        android:id="@+id/textView5"
        android:layout_below="@+id/line_01"
        android:background="@color/whitecolor"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/blackcolor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line_02"
        android:layout_below="@+id/textView5"
        android:background="@drawable/graph_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="活动收费：￥100"
        android:id="@+id/textView6"
        android:layout_below="@+id/line_02"
        android:background="@color/whitecolor"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/blackcolor" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:background="@drawable/graph_regtangle"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="活动详情"
            android:textSize="14dp"
            android:textColor="#a3a6a9"
            android:background="@color/whitecolor"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_toRightOf="@+id/textView7"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:background="#a3a6a9"
            android:layout_alignBaseline="@+id/textView7" />

        <TextView
            android:layout_toRightOf="@+id/line"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="评论:205"
            android:textSize="14dp"
            android:textColor="#a3a6a9"
            android:layout_alignBaseline="@+id/textView7"
            android:background="@color/whitecolor"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:id="@+id/textView8" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:background="#a3a6a9" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="赞:10"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="#a3a6a9"
            android:background="@color/whitecolor"
            android:layout_marginLeft="5dp"
            android:id="@+id/textView9" />
    </LinearLayout>

</RelativeLayout>